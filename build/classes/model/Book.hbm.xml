<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model">
	<class name="Book">
		<id name="BookID" type="integer">
			<generator class="native" />
		</id>
		<property name="BookName" not-null="false" />
		<property name="ISBN" type="string" not-null="false" />
		<property name="Price" not-null="false"/>
		<property name="Location" not-null="false"/>
		<property name="ReturnPeriod" not-null="false" />
		<property name="FineValue" not-null="false"/>
		<property name="isBorrowed" type="boolean" not-null="false"/>
		<property name="category" type="string" not-null="false"/>
		<property name="Author" type="string" not-null="false"/>
		<property name="Introduction" type="string" not-null="false"/>
	</class>
</hibernate-mapping>